{
    "name": "vsocde-tools",
    "displayName": "Simple Tools",
    "description": "Some small tools for VS Code",
    "version": "1.3.4",
    "publisher": "yx1126",
    "repository": {
        "type": "git",
        "url": "https://github.com/yx1126/vscode-tools"
    },
    "engines": {
        "vscode": "^1.76.0"
    },
    "categories": [
        "Other"
    ],
    "icon": "resources/tool.png",
    "main": "./dist/extension.js",
    "scripts": {
        "compile": "pnpm run build",
        "watch": "tsc -watch -p ./",
        "dev": "pnpm build:i18n && cross-env NODE_ENV=development rollup -c --watch --bundleConfigAsCjs",
        "build": "pnpm build:i18n && cross-env NODE_ENV=production rollup -c --bundleConfigAsCjs",
        "build:i18n": "esno scripts/build-i18n.ts",
        "pretest": "pnpm run compile && pnpm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^4.0.3",
        "@rollup/plugin-commonjs": "^24.0.1",
        "@rollup/plugin-eslint": "^9.0.3",
        "@rollup/plugin-json": "^6.0.0",
        "@rollup/plugin-node-resolve": "^15.0.1",
        "@rollup/plugin-terser": "^0.4.0",
        "@types/fs-extra": "^11.0.1",
        "@types/glob": "^8.1.0",
        "@types/mocha": "^10.0.1",
        "@types/node": "~16.18.16",
        "@types/vscode": "^1.76.0",
        "@typescript-eslint/eslint-plugin": "^5.55.0",
        "@typescript-eslint/parser": "^5.55.0",
        "@vscode/test-electron": "^2.3.0",
        "cross-env": "^7.0.3",
        "eslint": "^8.36.0",
        "esno": "^0.16.3",
        "fast-glob": "^3.2.12",
        "fs-extra": "^11.1.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "rollup": "^3.19.1",
        "rollup-plugin-typescript2": "^0.34.1",
        "typescript": "^4.9.5"
    },
    "activationEvents": [
        "onStartupFinished"
    ],
    "contributes": {
        "menus": {
            "editor/title": [
                {
                    "command": "tools.explorer.position",
                    "group": "navigation",
                    "when": "simple-tools.plugin.location"
                }
            ],
            "editor/context": [
                {
                    "command": "tools.clipboard.add",
                    "group": "navigation",
                    "when": "editorHasSelection"
                }
            ],
            "view/title": [
                {
                    "command": "tools.clipboard.clear",
                    "when": "view == tools.clipboard",
                    "group": "navigation"
                },
                {
                    "command": "tools.explorer.position",
                    "when": "view == workbench.explorer.fileView && simple-tools.plugin.location",
                    "group": "navigation"
                },
                {
                    "command": "tools.outline.refresh",
                    "when": "view == tools.outline",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "tools.clipboard.edit",
                    "group": "inline",
                    "when": "view == tools.clipboard"
                },
                {
                    "command": "tools.clipboard.delete",
                    "group": "inline",
                    "when": "view == tools.clipboard"
                },
                {
                    "command": "tools.clipboard.copytext",
                    "group": "inline",
                    "when": "view == tools.clipboard"
                },
                {
                    "command": "tools.clipboard.goto_file",
                    "group": "inline",
                    "when": "view == tools.clipboard && viewItem == goto_file"
                }
            ]
        },
        "commands": [
            {
                "command": "tools.clipboard.add",
                "title": "%menu.clipboard.add%",
                "category": "%category%"
            },
            {
                "command": "tools.clipboard.edit",
                "title": "%menu.clipboard.edit%",
                "category": "%category%",
                "icon": {
                    "dark": "resources/dark/edit.svg",
                    "light": "resources/light/edit.svg"
                }
            },
            {
                "command": "tools.clipboard.delete",
                "title": "%menu.clipboard.delete%",
                "category": "%category%",
                "icon": {
                    "dark": "resources/dark/close.svg",
                    "light": "resources/light/close.svg"
                }
            },
            {
                "command": "tools.clipboard.clear",
                "title": "%menu.clipboard.clear%",
                "category": "%category%",
                "icon": {
                    "dark": "resources/dark/delete.svg",
                    "light": "resources/light/delete.svg"
                }
            },
            {
                "command": "tools.clipboard.copytext",
                "title": "%menu.clipboard.copy%",
                "category": "%category%",
                "icon": {
                    "dark": "resources/dark/copy.svg",
                    "light": "resources/light/copy.svg"
                }
            },
            {
                "command": "tools.clipboard.goto_file",
                "title": "%menu.clipboard.goto_file%",
                "category": "%category%",
                "icon": "$(go-to-file)"
            },
            {
                "command": "tools.help.open_url",
                "title": "%menu.help.open_url%",
                "category": "%category%"
            },
            {
                "command": "tools.explorer.position",
                "title": "%menu.explorer.position%",
                "category": "%category%",
                "icon": {
                    "dark": "resources/dark/position.svg",
                    "light": "resources/light/position.svg"
                }
            },
            {
                "command": "tools.outline.refresh",
                "title": "%menu.outline.refresh%",
                "category": "%category%",
                "icon": "$(timeline-refresh)"
            },
            {
                "command": "tools.utils.scroll_to",
                "title": "%utils.scroll_to%",
                "category": "%category%"
            }
        ],
        "views": {
            "tools": [
                {
                    "id": "tools.clipboard",
                    "name": "%view.clipboard%",
                    "when": "simple-tools.plugin.clipboard"
                },
                {
                    "id": "tools.outline",
                    "name": "%view.outline%",
                    "when": "simple-tools.plugin.outline"
                },
                {
                    "id": "tools.helpAndFeedback",
                    "name": "%view.help%"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "tools",
                    "title": "%title%",
                    "icon": "resources/tool.svg"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "Simple tools",
            "properties": {
                "simple-tools.tools": {
                    "type": "array",
                    "default": null,
                    "description": "%tools.description%",
                    "items": {
                        "type": "string",
                        "enum": [
                            "clipboard",
                            "location",
                            "outline"
                        ]
                    }
                },
                "simple-tools.openAuxiliaryBar": {
                    "type": "boolean",
                    "default": true,
                    "description": "%bar.description%"
                },
                "simple-tools.outline.modules": {
                    "type": "array",
                    "default": [],
                    "items": {
                        "type": "string"
                    },
                    "description": "%outline.description%"
                },
                "simple-tools.outline.script.default": {
                    "type": "boolean",
                    "default": true,
                    "description": "%outline.script.default%"
                }
            }
        }
    }
}